<theme>
	<formatVersion>7</formatVersion>

	<variables>
		<mainColor>0094FF</mainColor>
	</variables>
	
    <view name="system">
    <image name="trim" extra="true">
		<color>${mainColor}</color>
    </image>
	
    <text name="systemInfo">
        <color>${mainColor}</color>
    </text>
	
	<text name="shortdescription" extra="true">
        <color>${mainColor}</color>
    </text>
    </view>
	
	<view name="basic, detailed, video">
	<textlist name="gamelist">
        <selectedColor>FFFFFF</selectedColor>
    </textlist>
	</view>
	
	<view name="grid">
	<ninepatch name="gridtile.background:selected">
      <animateColor>${mainColor}</animateColor>
    </ninepatch>
	</view>
	
    <view name="screen">
    <text name="clock">
        <color>${mainColor}</color>
    </text>
    </view>
	
    <view name="menu">
	<menuText name="menutext, menutitle">
        <separatorColor>${mainColor}</separatorColor>
	</menuText>
    </view>
</theme>