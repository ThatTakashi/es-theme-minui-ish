Theme by:    Takashi
Forked from: Sagabox
-->

<theme>
<formatVersion>7</formatVersion>

    <!--Systemview-->
    <view name="system">
	<image name="background" extra="true">
        <path>./_art/background/background.png</path>
        <tile>false</tile>
        <size>1 1</size>
        <pos>0 0</pos>
        <origin>0 0</origin>
		<zIndex>3</zIndex>
    </image>

    <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>-0.075 0.0</pos>
        <logoAlignment>left</logoAlignment>         
        <size>4 1</size>
        <logoScale>1</logoScale>
        <zIndex>5</zIndex>          
        <logoSize>1 0.27</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>       
    </carousel>
    
    <text name="logoText">
        <fontPath>./_art/BPreplayBold.otf</fontPath>
        <fontSize>0.082</fontSize>
        <color>FFFFFFFF</color>
        <size>1 1</size>
    </text>
	
    <text name="systemInfo">
        <fontPath>./_art/Acre.otf</fontPath>
        <backgroundColor>00000000</backgroundColor>
        <forceUppercase>1</forceUppercase>
        <origin>0 0</origin>
        <pos>0.55 0.01</pos>
        <size>0.400 0.039</size>
        <fontSize>0.044</fontSize>
		<zIndex>-1</zIndex>
    </text>
    </view>
	
    <!--Basic-->
    <view name="basic">
	<image name="background" extra="true">
        <tile>false</tile>
        <path>./_art/background/background.png</path>
        <size>1 1</size>
        <pos>0 0</pos>
		<zIndex>3</zIndex>
    </image>
	<textlist name="gamelist">
		<selectorColor>fffffff00</selectorColor>
        <primaryColor>ffffff</primaryColor>
        <secondaryColor>888888</secondaryColor>
        <fontPath>./_art/Acre.otf</fontPath>
        <fontSize>0.04</fontSize>
        <alignment>center</alignment>
        <horizontalMargin>0.01</horizontalMargin>
        <origin>0 0</origin>
        <lineSpacing>1.5</lineSpacing>
	</textlist>
	</view>
	
    <!--Detailed and Video views-->
    <view name="detailed, video">

    <image name="background" extra="true">
        <tile>false</tile>
        <path>./_art/background/backgroundgame.png</path>
        <size>1 1</size>
        <pos>0 0</pos>
		<zIndex>3</zIndex>
    </image>

    <textlist name="gamelist">
	    <selectorColor>fffffff</selectorColor>
        <primaryColor>888888</primaryColor>
        <secondaryColor>888888</secondaryColor>
        <fontPath>./_art/BPreplayBold.otf</fontPath>
        <fontSize>0.06</fontSize>
		<pos>0.02 0.055</pos>
        <alignment>left</alignment>
        <horizontalMargin>0.01</horizontalMargin>
        <origin>0 0</origin>
        <lineSpacing>1.4</lineSpacing>
    </textlist>
	
	<video name="md_video">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <delay>999999</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <snapshotSource>image</snapshotSource>
	  <effect>none</effect>
      <zIndex>0</zIndex>
    </video>
    </view>
	
	<!--Release and rating data for detailed and video views-->
    <view name="detailed,video">

	<image name="overlay" extra="true">
		<path>./_art/systemoverlay.png</path>
		<tile>false</tile>
        <size>1 0.15</size>
        <pos>0 0</pos>
        <origin>0 0</origin>
		<zIndex>9</zIndex>
	</image>
    </view>

    <!-- Gridview -->
    <view name="grid">
	
    <imagegrid name="gamegrid">
		<margin>0.050 0.010</margin>
	    <scrollDirection>horizontal</scrollDirection>
		<autoLayout>3 1</autoLayout>
		<autoLayoutSelectedZoom>1.0</autoLayoutSelectedZoom>
		<centerSelection>true</centerSelection>
		<scrollLoop>true</scrollLoop>
    </imagegrid>
	
    <text name="gridtile">
        <color>00000000</color>
        <backgroundColor>00000000</backgroundColor>
        <fontPath>./_art/AdobeBlank.ttf</fontPath>
        <fontSize>0.01</fontSize>
	    <alignment>center</alignment>
	    <visible>false</visible>
    </text>
	
    <ninepatch name="gridtile.background:selected">
      <animateColor>FFFFFF</animateColor>
      <animateColorTime>800</animateColorTime>
    </ninepatch>
	
    <image name="background" extra="true">
        <path>./_art/background/background.png</path>
        <tile>false</tile>
        <size>1 1</size>
        <pos>0 0</pos>
        <origin>0 0</origin>
		<zIndex>3</zIndex>
    </image>
		
	<text name="md_name">
        <pos>0.003 -0.03</pos>
	    <fontPath>./_art/Acre.otf</fontPath>
        <fontSize>0.04</fontSize>
        <size>1 0.10</size>
		<forceUppercase>1</forceUppercase>
        <alignment>left</alignment>
    </text>
	
    <video name="md_video">
        <origin>0.5 0.5</origin>
        <pos>0.74 0.3</pos>
        <maxSize>0.37 0.47</maxSize>
		<delay>1</delay>
        <zIndex>50</zIndex>
		<effect>none</effect>
	</video>
		
	<image name="logo">
	    <color>00000000</color>
	    <path>./assets/box.png</path>
		<pos>1 1</pos>
	</image>

    <gridtile name="default">
        <backgroundColor>FFFFFF00</backgroundColor>
        <backgroundCornerSize>9 9</backgroundCornerSize>
        <selectionMode>image</selectionMode>
        <padding>5 5</padding>
    </gridtile>
	
    <text name="md_description">
		<fontPath>./_art/Acre.otf</fontPath>
	    <color>FFFFFF99</color>
        <fontSize>0.03</fontSize>
	    <alignment>left</alignment>
        <forceUppercase>0</forceUppercase>
        <lineSpacing>1</lineSpacing>
	    <pos>0.003 0.08</pos>
	    <size>0.464 0.42</size>
    </text>
    </view>

    <view name="screen">
    </view>
	<view name="system,basic,video,detailed,grid">
    <helpsystem name="help">
        <fontPath>./_art/Acre.otf</fontPath>
         <fontSize>0.044</fontSize>     
         <pos>0.02 0.955</pos>  
        <textColor>101010</textColor>
        <iconColor>101010</iconColor>
		<zIndex>6</zIndex>
    </helpsystem>
	</view>
	
	<variables>
	     <hidehelpbarSubsetName>Hide Help Bar</hidehelpbarSubsetName>
    </variables>
	
	<subset name="hidehelpbar" displayName="${hidehelpbarSubsetName}">
         <include name="no">./_art/extra/ogs/showhelpbar.xml</include>
		 <include name="yes">./_art/extra/ogs/hidehelpbar.xml</include>
    </subset>
	
</theme>